{
  "name": "@swingletree-oss/scotty-client",
  "description": "Scotty Client",
  "repository": {
    "type": "git",
    "url": "git@github.com:swingletree-oss/scotty-client.git"
  },
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "npm run build && node bin/main.js",
    "build": "npm run build-ts && npm run tslint",
    "test": "ts-mocha --exit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "watch-debug": "nodemon --inspect bin/main.js",
    "release": "semantic-release"
  },
  "dependencies": {
    "@swingletree-oss/harness": "^1.0.2",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-things": "0.0.33",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.7",
    "@types/request": "^2.48.2",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "eslint": "^6.1.0",
    "mocha": "^6.2.0",
    "mockserver": "^3.1.0",
    "nodemon": "^1.19.1",
    "semantic-release": "^15.13.30",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "sinon-express-mock": "^2.2.0",
    "ts-mocha": "^6.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "license": "GPL-3.0",
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
